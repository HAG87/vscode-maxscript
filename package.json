{
	"name": "language-maxscript",
	"displayName": "Language MaxScript",
	"description": "Autodesk 3ds Max MaxScript language support",
	"version": "1.9.2",
	"publisher": "atelierbump",
	"icon": "mxs.png",
	"homepage": "https://github.com/HAG87/vscode-maxscript",
	"repository": {
		"type": "git",
		"url": "https://github.com/HAG87/vscode-maxscript"
	},
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Programming Languages"
	],
	"license": "MIT",
	"keywords": [
		"MaxScript"
	],
	"activationEvents": [
		"onLanguage:maxscript",
		"onCommand:mxs.help"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "maxscript",
				"aliases": [
					"MaxScript",
					"maxscript",
					"mxs"
				],
				"extensions": [
					".ms",
					".mcr"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "maxscript",
				"scopeName": "source.mxs",
				"path": "./syntaxes/maxscript.tmLanguage.json"
			}
		],
		"semanticTokenScopes": [{
			"language": "maxscript",
			"scopes": {
				"class": ["support.class.mxs"],
				"classclass.defaultLibrary": ["support.class.mxs"],
				"function.defaultLibrary": ["support.function.mxs"],
				"interface": ["support.type.interface.mxs"],
				"namespace": ["support.superclass.mxs"],
				"struct": ["storage.type.struct.mxs"],
				"type.defaultLibrary": ["support.type.primitive.mxs"],
				"type": ["support.type.primitive.mxs"],
				"variable": ["support.variable.system.mxs"],
				"variable.other.readwrite": ["support.variable.system.mxs"]
			}
		}],
		"commands": [
			{
				"command": "mxs.help",
				"title": "MaxScript help"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection && editorTextFocus && resourceLangId == maxscript",
					"command": "mxs.help",
					"group": "navigation@1"
				}
			]
		},
		"snippets": [
			{
				"language": "maxscript",
				"path": "./snippets/maxscript.json"
			}
		],
		"configurationDefaults": {
			"[maxscript]":{
				"editor.semanticHighlighting.enabled": true
			}
		},
		"configuration": {
			"title": "Language MaxScript",
			"type": "object",
			"properties": {
				"maxscript.gotosymbol": {
					"type": "boolean",
					"default": true,
					"description": "Enable Go to Symbol in document"
				},
				"maxscript.gotodefinition": {
					"type": "boolean",
					"default": true,
					"description": "Enable ( Go to | Peek )  Definition in document"
				},
				"maxscript.completions": {
					"type": "boolean",
					"default": true,
					"description": "Enable suggest completions"
				},
				"maxscript.semantics": {
					"type": "boolean",
					"default": true,
					"description": "Enable Semantic highlight"
				},
				"maxscript.helpprovider": {
					"type": "string",
					"default": "http://help.autodesk.com/view/3DSMAX/2018/ENU/",
					"description": "maxScript help source"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.45.0",
		"tslint": "^6.1.2",
		"typescript": "^3.9.2",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/moo": "^0.5.3",
		"moo": "^0.5.1",
		"nearley": "^2.19.3"
	},
	"__metadata": {
		"id": "7f2edb68-8e0f-4a8c-9380-24d100650a02",
		"publisherDisplayName": "Atelier Bump",
		"publisherId": "9039a6b2-5163-4caa-8366-6f65e2d75d03"
	}
}
